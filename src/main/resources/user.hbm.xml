<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.maktab25.model.User" table="users">
        <id name="id" column="id">
<!--            <generator class=""></generator>-->
        </id>
        <property name="username" not-null="true" length="30" column="user_name"/>
        <property name="password" type="string" length="45" column="pass"/>
        <property name="name" type="string" column="name"/>

<!--        <one-to-one name="teacher" class="com.example.maktab25.model.teacher.Teacher" foreign-key=""/>-->

        <set name="students">
            <key not-null="true"></key>
            <one-to-many></one-to-many>
        </set>

        <list name="teachers">
            <key></key>
            <index></index>
            <many-to-many>

            </many-to-many>
        </list>
    </class>
</hibernate-mapping>